---
import Footer from 'src/components/navigation/Footer.tsx';
import NavBar from 'src/components/navigation/NavBar';
import App from '../components/App';
---

<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <link rel='stylesheet' href='https://rsms.me/inter/inter.css' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <meta name='generator' content={Astro.generator} />
    <title>About</title>
  </head>
  <body
    style='min-height: 100vh; display: flex; flex-direction: column; flex: 1; background-color: #262525; color:white;'
  >
    <NavBar client:only='react' />
    <App client:only='react' page={Astro.url.pathname}>
      <slot />
    </App>
    <Footer />
  </body>
</html>
